    for x in mycursor:
        lista_con_elementos.append(x) 

    codcliente=lista_con_elementos[0][0]
    cedula=lista_con_elementos[0][1]


    mycursor.execute("SELECT * FROM Movimientos where id_cli= {} ".format(cliente))
    lista=[]
    for x in mycursor:
        lista.append (x)
    print('el cliente es', codcliente,cedula)
    print(lista)



